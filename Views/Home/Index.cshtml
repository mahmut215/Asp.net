@model IEnumerable<Jobs_Offers_Website.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <br />
    <h3>Welcome To Our Website</h3>
    <p>Welcome to the job search space of different types You can post a job if you are a publisher and you can apply for the job if you are looking for a job.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">More details &raquo;</a></p>
</div>

@foreach (var item in Model)
{
    <div class="panel panel-default" style="padding:15px">
        <h1 class="panel panel-heading">@Html.DisplayFor(modelItem => item.categoryName)</h1>
        <h5>@Html.DisplayFor(modelItem => item.categoryDescription)</h5>
        <div class="row">
            @foreach (var subItem in item.Jobs)
            {
                /**/

                <div class="col-md-3 thumbnail" style="margin-right:20px;margin-bottom:30px;height:380px">
                    <img src="~/Uploads/@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <h5>@Html.DisplayFor(modelItem => subItem.JobDescription)</h5>
                    @Html.ActionLink("Details", "Details", new { JobId = subItem.Id },new { @class="btn btn-primary"})
                </div>

            }
        </div>
    </div>
}

